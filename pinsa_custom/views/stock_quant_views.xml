<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_quant_form_inh" model="ir.ui.view">
        <field name="name">stock.quant.form.inh</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='owner_id']" position="after">
                <field name='qty_box' readonly="0" force_save="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_quant_tree_inh" model="ir.ui.view">
        <field name="name">stock.quant.tree.inh</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']" position="after">
                <field name='qty_box' readonly="0" force_save="1"/>                
            </xpath>
            <xpath expr="//field[@name='lot_id']" position="replace">
                <field name="lot_id" groups="stock.group_production_lot"
                       attrs="{
                            'readonly': [('tracking', 'not in', ['serial', 'lot'])],
                            'required': [('tracking', '!=', 'none')]
                       }"
                       invisible="context.get('hide_lot', False)"
                       context="{'default_product_id': product_id, 'default_company_id': company_id}"/>
            </xpath>
        </field>
    </record>
</odoo>
