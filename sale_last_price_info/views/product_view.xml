<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_last_sale_info_form_view" model="ir.ui.view">
        <field name="name">product.last.sale.info.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='sales']" position="inside">
                <group string="Sale" name="last_sale_info">
                    <field name="last_customer_id" />
                    <field name="last_sale_date" />
                    <field name="last_sale_price" />
                </group>
            </xpath>
        </field>
    </record>

    <record id="sale_last_sale_info_form_view" model="ir.ui.view">
        <field name="name">sale.order.sale.lastprice.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="last_sale_price" />
            </xpath>
        </field>
    </record>

    <record id="sale_report_view_pivot_last_sale_info" model="ir.ui.view">
        <field name="name">sale.report.pivot.lastprice</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale_enterprise.sale_report_view_pivot" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_subtotal']" position="before">
                <field name="last_sale_price" type="measure"/>
            </xpath>
        </field>
    </record>

</odoo>
